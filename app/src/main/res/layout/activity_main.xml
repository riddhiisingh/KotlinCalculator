<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bu5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_orange"
                android:onClick="buClean"
                android:text="AC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_orange"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buPerc"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_orange"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buDivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_orange"
                android:onClick="buOpEvent"
                android:text="/"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="30pt"
            android:layout_height="30pt">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buMult"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_orange"
                android:onClick="buOpEvent"
                android:text="*"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_orange"
                android:onClick="buOpEvent"
                android:text="-"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"

                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@drawable/my_button_orange"
                android:onClick="buOpEvent"
                android:text="+"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@drawable/my_button_bg"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="160dp"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@drawable/my_button_bg"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="20sp" />

        <Button
            android:id="@+id/buEqual"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@drawable/ny_button_grey"
            android:onClick="buEqualEvent"
            android:text="="
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>